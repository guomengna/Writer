<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/fanhui"
            android:layout_width="31dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/fanhui"
            android:onClick="onClick"
            android:layout_weight="0.01" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="输入新密码："
            android:textSize="18dp"
            android:gravity="center"
            />
        <com.example.guome.writer.MyTool.ClearEditText
            android:id="@+id/new_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="new password"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:textColorHint="@color/back_of_touxiang"
            android:background="@drawable/bg_edittext1"
            >
        </com.example.guome.writer.MyTool.ClearEditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="再次输入："
            android:textSize="18dp"
            android:gravity="center"
            />
        <com.example.guome.writer.MyTool.ClearEditText
            android:id="@+id/new_2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="new password"
            android:textSize="18dp"
            android:gravity="center"
            android:textColorHint="@color/back_of_touxiang"
            android:background="@drawable/bg_edittext1"
            android:layout_marginLeft="5dp">
        </com.example.guome.writer.MyTool.ClearEditText>
    </LinearLayout>

    <Button
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/changepassword_bt"
        android:text="提交"
        android:onClick="onClick"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:background="@drawable/bt_changepassword"
        android:layout_marginTop="20dp"/>

</LinearLayout>